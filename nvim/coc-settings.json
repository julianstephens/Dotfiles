{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "csx"
  ],
  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  // eslint
  "eslint.format.enable": true,
  "eslint.nodePath": "/home/julian/.nvm/versions/node/v14.16.0/bin/node",
  // tsserver
  "tsserver.enable": true,
  "tsserver.npm": "/home/julian/.nvm/versions/node/v14.16.0/bin/npm",
  // discord rpc
  "rpc.enabled": true,
  "rpc.workspaceElapsedTime": true,
  "rpc.detailsEditing": "{filename}"
}
